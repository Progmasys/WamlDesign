<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:po="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options">

    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#f7f7f7" po:Freeze="True"/>      <!-- .3% White -->
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#f2f2f2" po:Freeze="True"/>    <!-- .5% White -->
    <SolidColorBrush x:Key="DisableTextBrush" Color="#ededed" po:Freeze="True"/>      <!-- .7% White -->
    <SolidColorBrush x:Key="BodyBrush" Color="#212121" po:Freeze="True"/>             <!-- .87% Black -->

</ResourceDictionary>